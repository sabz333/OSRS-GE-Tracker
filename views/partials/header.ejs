<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Old School Runescape GE Tracker</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="<%- mainStyleSheet %>" />
  </head>
  <body>
    <header>
      <div class="container-fluid d-flex flex-row py-3" id="mainHeader">
        <div
          class="col-4 d-flex flex-row justify-content-start align-items-center"
        >
          <div class="d-flex" id="hamMenu">
            <span class="material-symbols-outlined"> menu </span>
          </div>
          <a class="ps-3" id="logo" href="/">
            <img src="/assets/logo/logo_alt.svg" alt="OSRS GE Tracker Logo" />
          </a>
        </div>
        <div class="col-4"></div>
        <div class="col-4 d-flex justify-content-end align-items-center">
          <div class="text-center" id="user">USERS COMING SOON!</div>
        </div>
      </div>
    </header>
    <div class="container-fluid" id="headerDataDisplay">
      <div class="container-xl d-flex flex-column z-1">
        <div class="container pt-3 pb-1" id="headerCenteringCont">
          <form action="/mover" method="post" id="headerItemCategorySelection">
            <span>TOP MOVERS</span>
            <input type="submit" name="mover" value="10" id="potions">
            <label for="potions" class="<%= catId == 10 ? "active" : "" %>">Potions</label>
            <input type="submit" name="mover" value="5" id="herbs">
            <label for="herbs" class="<%= catId == 5 ? "active" : "" %>">Herbs</label>
            <input type="submit" name="mover" value="11" id="runes">
            <label for="runes" class="<%= catId == 11 ? "active" : "" %>">Runes</label>
            <input type="submit" name="mover" value="3" id="food">
            <label for="food" class="<%= catId == 3 ? "active" : "" %>">Food</label>
            <input type="submit" name="mover" value="6" id="jewellery">
            <label for="jewellery" class="<%= catId == 6 ? "active" : "" %>">Jewellery</label>
            <input type="submit" name="mover" value="12" id="logs">
            <label for="logs" class="<%= catId == 12 ? "active" : "" %>">Logs</label>
            <input type="submit" name="mover" value="9" id="ores">
            <label for="ores" class="<%= catId == 9 ? "active" : "" %>">Ores</label>
            <input type="submit" name="mover" value="1" id="ammo">
            <label for="ammo" class="<%= catId == 1 ? "active" : "" %>">Ammo</label>
            <input type="submit" name="mover" value="13" id="seeds">
            <label for="seeds" class="<%= catId == 13 ? "active" : "" %>">Seeds</label>
          </form>
        </div>
        <div class="container p-2 d-flex flex-row" id="headerCards">
          <% headerCardArray.forEach(card => { %>
           <%- card %>
          <% }) %>
        </div>
      </div>
      <div class="search">
        <span class="material-symbols-rounded"> search </span>
        <div class="searchBar">
          <div class="searchInput">
            <input
              type="text"
              autocomplete="off"
              placeholder="Search for items"
              id="searchBarInput"
            />
          </div>
        </div>
        <div id="searchBox">
          <div id="searchResults">
          </div>
        </div>
      </div>
    </div>